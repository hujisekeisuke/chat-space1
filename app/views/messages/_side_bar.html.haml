.side_bar
  .side_bar__nickname
    .side_bar__nickname__items 
      .side_bar__nickname__items__name
        = current_user.name
      .side_bar__nickname__items__menu
        .side_bar__nickname__items__menu__group
          = link_to  new_group_path do
            = icon('fas', 'pen-square', class: 'icon')
        .side_bar__nickname__items__menu__user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  .side_bar__groups-list
    - current_user.groups.each do |group|
      .side_bar__groups-list__group
        = link_to group_messages_path(group) do
          .side_bar__groups-list__group__name
            = group.name
          .side_bar__groups__list__group__message
            = group.show_last_message